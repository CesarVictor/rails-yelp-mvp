<%= simple_form_for [ @restaurant ] do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"]%>
  <%= f.submit "Submit restaurant", class: "btn btn-primary" %>
<% end %>
<%= link_to 'List of my Restaurants', restaurants_url %>
